<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MenuButtonsController">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="20.0" stylesheets="@style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="kanbanBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefHeight="100.0" prefWidth="100.0" styleClass="buttonNoFill" text="KANBAN" />
                <Button fx:id="allBooksBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefHeight="100.0" prefWidth="100.0" styleClass="buttonNoFill" text="ALL BOOKS" />
                <Button fx:id="newBookBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefHeight="100.0" prefWidth="100.0" styleClass="buttonNoFill" text="NEW BOOK" />
                <Button fx:id="statisticsBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefHeight="100.0" prefWidth="100.0" styleClass="buttonNoFill" text="STATISTICS" />
            </children>
        </HBox>
    </children>
</AnchorPane>
