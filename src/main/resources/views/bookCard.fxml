<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootHBox" alignment="CENTER_LEFT" spacing="10" styleClass="bookCard" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.BookCardController">

    <padding>
        <Insets bottom="10" left="20" right="20" top="10" />
    </padding>

    <children>

        <ImageView fx:id="bookCover" fitHeight="99.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER" />
        <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
            <children>
                <VBox>
                    <children>
                        <Label fx:id="bookTitle" minWidth="-Infinity" prefWidth="100.0" styleClass="bookCardTitle" text="Testing text" wrapText="true" />
                        <Label fx:id="bookAuthor" styleClass="bookCardAuthor" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>

    </children>
</HBox>
